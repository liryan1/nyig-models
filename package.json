{
  "name": "@nyig/models",
  "version": "0.3.3",
  "license": "MIT",
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "clean": "rm -rf dist node_modules",
    "format": "prettier --write src",
    "lint": "pnpm run format && tsc",
    "prepare": "husky",
    "prepublishOnly": "cp package.json README.md dist",
    "release": "pnpm run build && changeset publish"
  },
  "peerDependencies": {
    "zod": ">=3.22.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,md}": "prettier --write"
  },
  "publishConfig": {
    "directory": "dist"
  }
}
